@model dynamic

<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 col-lg-10 mx-auto">
                    <div class="bg-faded rounded p-5">
                        <form asp-action="TrackOrder" method="post">
                            <div class="mb-3">
                                <label for="OrderID" class="form-label">Order Number</label>
                                <input type="text" class="form-control" id="orderId" name="orderId" aria-describedby="orderHelp">
                                <div id="orderHelp" class="form-text">Enter your Order Number</div>
                            </div>
                            <button type="submit" class="btn btn-primary">Track Order</button>
                        </form>
                        <div id="orderStatus" class="mt-3">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/trackorder.js"></script>
}
