@model IEnumerable<PatenPottery.Models.Service>

<!DOCTYPE html>
<html>
<head>
    <title>Our Services</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    @{
        int counter = 0;
    }
    @foreach (var service in Model)
    {
        <section class="page-section">
            <div class="container">
                <div class="product-item">
                    <div class="product-item-title d-flex">
                        <div class="bg-faded p-5 d-flex @(counter % 2 == 0 ? "ms-auto" : "me-auto") rounded">
                            <h2 class="section-heading mb-0">
                                <span class="section-heading-upper">@service.ServiceName</span>
                                <span class="section-heading-lower">@service.ServiceDescription</span>
                            </h2>
                        </div>
                    </div>
                    @if (service.Image != null && service.Image.Length > 0)
                    {
                        <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="data:image;base64,@Convert.ToBase64String(service.Image)" alt="@service.ServiceName" />
                    }
                    else
                    {
                        <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="~/assets/img/default-image.jpg" alt="Default Image" />
                    }
                    <div class="product-item-description d-flex @(counter % 2 == 0 ? "me-auto" : "ms-auto")">
                        <div class="bg-faded p-5 rounded">
                            <p class="mb-0">Price: @service.Price</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        counter++;
    }
</body>
</html>
