@model IEnumerable<PatenPottery.Models.Service>

<!DOCTYPE html>
<html>
<head>
    <title>Our Services</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    @{
        int counter = 0;
    }
    @foreach (var service in Model)
    {
        <section class="page-section">
            <div class="container">
                <div class="product-item">
                    <div class="product-item-title d-flex">
                        <div class="bg-faded p-5 d-flex @(counter % 2 == 0 ? "ms-auto" : "me-auto") rounded">
                            <h2 class="section-heading mb-0">
                                <span class="section-heading-upper">@service.ServiceName</span>
                                <span class="section-heading-lower">@service.ServiceDescription</span>
                            </h2>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mb-3 mb-lg-0">
                        @if (service.Image != null && service.Image.Length > 0)
                        {
                            <img class="product-item-img rounded img-fluid" src="data:image;base64,@Convert.ToBase64String(service.Image)" alt="@service.ServiceName" style="width: 800px; height: 300px; object-fit: cover;" />
                        }
                        else
                        {
                            <img class="product-item-img rounded img-fluid" src="~/assets/img/default-image.jpg" alt="Default Image" style="width: 400px; height: 200px; object-fit: cover;" />
                        }
                    </div>
                    <div class="product-item-description d-flex @(counter % 2 == 0 ? "me-auto" : "ms-auto")">
                        <div class="bg-faded p-5 rounded">
                            <p class="mb-0">Price: @service.Price</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        counter++;
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
