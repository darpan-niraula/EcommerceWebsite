@model PatenPottery.ViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Create Order";
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 col-lg-10 mx-auto">
                    <div class="bg-faded rounded p-5">
                        <div class="card-body">
                            <div class="table-responsive">

                                <form asp-action="Create" enctype="multipart/form-data" method="post" onsubmit="event.preventDefault(); CreateOrder();" id="createOrderForm">
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Number" class="control-label"></label>
                                        <input asp-for="Number" class="form-control" />
                                        <span asp-validation-for="Number" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Address" class="control-label"></label>
                                        <input asp-for="Address" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Image" class="control-label"></label>
                                        <input asp-for="Image" class="form-control" type="file" />
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <input asp-for="DoFire" class="form-check-input" type="checkbox" id="DoFireCheckbox" />
                                        <label asp-for="DoFire" class="form-check-label" for="DoFireCheckbox"></label>
                                        <span asp-validation-for="DoFire" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-check">
                                        <input asp-for="DoGlaze" class="form-check-input" type="checkbox" id="DoGlazeCheckbox" />
                                        <label asp-for="DoGlaze" class="form-check-label" for="DoGlazeCheckbox"></label>
                                        <span asp-validation-for="DoGlaze" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div id="orderStatus" class="mt-3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/createorder.js"></script>
}
